@font-face {
	font-family: 'iconos';
	src:url('../fonts/icomoon.eot?-ast5k5');
	src:url('../fonts/icomoon.eot?#iefix-ast5k5') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-ast5k5') format('woff'),
		url('../fonts/icomoon.ttf?-ast5k5') format('truetype'),
		url('../fonts/icomoon.svg?-ast5k5#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}


body
	background linear-gradient(90deg,#42005C 10%,#CF26E1 50%,#194358 90%)
	


footer
	color white
	text-align center
	margin 0 15px
	h3
		margin-top 20px
		margin-bottom 0
	
	p
		margin 0
		
				
header
	
	border-bottom 2px solid #0aa7a1
	overflow hidden
	position relative
	margin 0 15px
	
	h1
		color white
		font-weight normal
		font-size 40px
		text-align center
		
		
	p
		color white	
		text-align right
		padding 0 15px
		strong
			font-style italic
			
	.usuario
		position absolute
		top 10px		
		right 20px	
		color white
		font-size 30px
		font-style italic
	
	.logo
		float left
		img
			width 150px				
				
nav 
	background rgba(25,25,25,0.4)
	border-radius 10%
	margin 20px 0 0 0
	float left
	padding 20px 0 
	width 28%
	
	ul 
		li
			margin 20px
			a 
				color white
				font-family sans-serif
				font-size 20px
				text-decoration none
			
				&:hover
					background black


				
section
	overflow hidden
	
	
		
		width 75%
	.logeo
		text-align center
		p

			color white		
		
		form
					
			.login
				
				

				label
					display none 
					&:after
						font-family "iconos"
						content "\e608"
						color white
				
				input 
					width 270px
					height 42px
					margin-top 25px
					padding 0 15px
					background rgba(45,45,45,0.15)
					border-radius 6px
					border 1px solid rgba(255,255,255,0.15)		
					box-shadow 0 2px 3px 0 rgba(0,0,0,0.1)
					font-family Arial, sans-serif
					font-size 14px
					color #fff
					text-shadow 0 1px 2px rgba(0,0,0,0.1)
					

					
					
					&:focus
						outline none
						box-shadow 0 2px 3px 0 rgba(0,0,0,.1) inset, 0 2px 7px 0 rgba(0,0,0,.2)
					
					
			.btnIngresar
				cursor pointer
				width 300px
				height 44px
				margin-top 25px
				padding 0
				background linear-gradient(to bottom,#FF3900 10%,#F5CF8C 90%)
				border-radius 6px
				border 1px solid #ff730e
				box-shadow 0 15px 30px 0 rgba(255,255,255,.25) inset,0 2px 7px 0 rgba(0,0,0,.2)
				font-family Arial, san-serif
				font-size 14px
				font-weight 700
				color #fff
				text-shadow 0 1px 2px rgba(0,0,0,.1)
				-webkit-transition: all .2s;
				&:hover
					-webkit-box-shadow 0 15px 30px 0 rgba(255,255,255,.15) inset, 0 2px 7px 0 rgba(0,0,0,.2)
	

					
	.slide
		
		background-color rgba(3,3,3,0.2)
		float left
		height 400px
		width 67%
		
		
.contenido
	margin-top 20px
	margin-left 29%
	background-color #333
	height 400px
	width 71%