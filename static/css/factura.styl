header
	position relative
	 
	.titulo
		overflow hidden
		h1
			margin 9px 0 0 0
			padding 0
		img
			width 80px
			float left
			
		
	
	.encabezado
		font-size 14px
		
		margin-right 40%
		h2
			margin 0
			padding 0
		p
			margin 0 
			padding 0
	.factura
		position absolute
		top 0
		right 0
		border-radius 20px
		border solid 3px #252525
		height 100%
		width  39%
		padding 0
		
		p 
			text-align center	
			&.tituls
				color white
				background-color #252525
				width 100%
				margin 0
				padding 15px 0 15px 0
			
.datos
	
	border-radius 20px
	border solid 2px black
	margin 10px 0 0 0
	.cliente
		overflow hidden
		position relative
		div
			float left
			width 70%
			margin 0
			p
				em
					padding 0 10px
					display inline-block
					margin 0
					width 5px
					
					
				span
					margin-left 13%
		.fecha
			position absolute
			top 0px
			right 5px
			margin-right 20px
.detalle
	margin 10px
	.caja
		height 500px
		border solid 2px #444
		table
			width 100%
			tr	
				th
					background-color #68BED5
					border solid 2px #252525
					&.cantidad
						width 5%
					&.descrip 
						width 60%
					&.precio1
						width 10%
					&.precio2
						width 10%
				td 
					&.precio
						text-align right

.totales
	overflow hidden
	.importe-letras
		float left
		p 
			padding 0
			margin 0
			
		
	
	.importe-total
		width 28%
		margin-right 10px
		float right
		table
			width 100%
			height 100%
			tr 
				th 
					background-color #68BED5
					border solid 2px #252525
				td 
					border solid 2px #252525
					text-align right